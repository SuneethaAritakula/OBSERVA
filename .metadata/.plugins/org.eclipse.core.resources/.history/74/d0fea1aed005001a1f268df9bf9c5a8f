}else if(frameRateAlarm.contains("warning")) {
	
	System.out.println("Frame Rate alarm is in - Orange");
	Alarmcolor = "Orange";

}


else if(frameRateAlarm.contains("success")) 
{

System.out.println("Frame Rate alarm is in - Green");
Alarmcolor = "Green";

}
else if (frameRateAlarm.contains("default")) 
{

System.out.println("Frame Rate alarm is in - Black");
Alarmcolor = "Grey";

}

