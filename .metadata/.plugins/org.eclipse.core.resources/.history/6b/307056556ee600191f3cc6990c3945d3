							List<WebElement>cols = rows.get(i).findElements(By.tagName("td"));		
							
						for(int k = 0; k<cols.size(); k++)
						{
							String data = cols.get(k).getText();
							
							System.out.print(data+" ");
						
					}
						System.out.println();
						
						}
						
